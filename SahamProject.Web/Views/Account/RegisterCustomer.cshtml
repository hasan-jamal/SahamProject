@using Microsoft.AspNetCore.Mvc.ModelBinding;
@using SahamProject.Web.ViewModels
@model RegisterCustomerVM
@{
    ViewData["Title"] = "Register";
}
        <section class="section-register">
            <div class="container-padding">
                <div class="row no-gutters shadow-lg align-items-center row-padd">
                    <div class="col-md-6 d-none d-md-block image-register">
                        <img src="~/assets/images/dev1.jpg" class="img-fluid" style="min-height:100%;" />
                    </div>
                    <div class="col-md-6 bg-white content-form">
                        <h1 class="pb-5">Register Form</h1>
                        <div class="form-style">
                            <form role="form" asp-action="RegisterCustomer" asp-controller="Account" method="post">
                                <div class="form-group pb-3">
                                    <input  id="Name" type="text" name="Name" asp-for="Name" class="form-control" placeholder="Full Name" aria-describedby="emailHelp">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input  id="EmailAddress" type="email" name="EmailAddress" asp-for="EmailAddress" class="form-control" placeholder="Email Address" aria-describedby="emailHelp">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                 <div class="form-group pb-3">
                                    <input type="text" name="StreetName1" asp-for="StreetName1" class="form-control" placeholder="StreetName1" aria-describedby="StreetName1">
                                    <span asp-validation-for="StreetName1" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="StreetName2" asp-for="StreetName2" class="form-control" placeholder="StreetName2" aria-describedby="StreetName2">
                                    <span asp-validation-for="StreetName2" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="StoreNo" asp-for="StoreNo" class="form-control" placeholder="StoreNo" aria-describedby="StoreNo">
                                    <span asp-validation-for="StoreNo" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="Area" asp-for="Area" class="form-control" placeholder="Area" aria-describedby="Area">
                                    <span asp-validation-for="Area" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="BuildingNumber" asp-for="BuildingNumber" class="form-control" placeholder="Building Number" aria-describedby="BuildingNumber">
                                    <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="City" asp-for="City" class="form-control" placeholder="City" aria-describedby="City">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="Country" asp-for="Country" class="form-control" placeholder="Country" aria-describedby="Country">
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="ShortAddress" asp-for="ShortAddress" class="form-control" placeholder="Short Address" aria-describedby="ShortAddress">
                                    <span asp-validation-for="ShortAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="Location" asp-for="Location" class="form-control" placeholder="Location" aria-describedby="Location">
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input type="text" name="LocationMap" asp-for="LocationMap" class="form-control" placeholder="Location Map" aria-describedby="LocationMap">
                                    <span asp-validation-for="LocationMap" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-2">
                                    <input type="password" name="Password" asp-for="Password"  class="form-control" placeholder="Password"
                                        id="exampleInputPassword1">
                                          <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-2">
                                    <input type="password" name="ConfirmPassword" asp-for="ConfirmPassword"  class="form-control" placeholder="Confirm Password"
                                        id="ConfirmPassword">
                                          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between flex-col pb-3">
                                    <div class="d-flex align-items-center">
                                        <input name="" type="checkbox" value="" />
                                        <span class="px-2 font-weight-bold">Remember Me</span>
                                    </div>
                                    <div><a href="#">Forget Password?</a></div>
                                </div>
                                <div class="pb-2">
                                    <button type="submit"
                                        class="btn btn-primary w-100 font-weight-bold mt-2">Submit</button>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </section>