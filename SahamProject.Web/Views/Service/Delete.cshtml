@model Service
@{
    Layout = "~/Views/Shared/_dashboard.cshtml";
}
<div class="container p-3">
    <h1 class="h1-header mt-5">Delete Service</h1>
    <form method="post" class="mb-5" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">

                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-danger btn" style="width:150px">Delete</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Service" asp-action="Index">Back To List</a>

        </div>
    </form>
</div>