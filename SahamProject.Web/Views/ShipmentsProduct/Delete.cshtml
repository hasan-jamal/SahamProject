@model ShipmentsProduct

@{
    ViewBag.Title = "Delete Shpment Product";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

        <h1 class="h1-header mt-5"> Delete Shipment Product</h1>
                <div class="container text-home">
                    <form asp-action="Delete" method="post"role="form">
                        <input hidden asp-for="@Model.Id"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="@Model.Description"></label>
                                    <input type="text" disabled asp-for="@Model.Description" class="form-control" placeholder="Add Description">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="@Model.Width"></label>
                                    <input type="text" disabled asp-for="@Model.Width" class="form-control" placeholder="Add Width">
                                </div>
                            </div>

                              <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="@Model.Length"></label>
                                    <input type="text" disabled asp-for="@Model.Length" class="form-control" placeholder="Add Length">
                                </div>
                            </div>

                              <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="@Model.Height"></label>
                                    <input type="text" disabled asp-for="@Model.Height" class="form-control" placeholder="Add Height">
                                </div>
                            </div>


                              <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="@Model.Weight"></label>
                                    <input type="text" disabled asp-for="@Model.Weight" class="form-control" placeholder="Add Weight">
                                </div>
                            </div>

                            <div class="col-md-12 mt-4">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-danger w-30">Delete Shipment</button>
                                    <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
                                </div>
                            </div>

                        </div>
                    </form>

                </div>